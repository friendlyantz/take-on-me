<div id="<%= dom_id challenge_story %>" class="w-full sm:w-auto my-5 space-y-5">

  <h1 class="font-bold text-4xl">
    <%= challenge_story.title %>
  </h1>

  <ul class="steps steps-vertical lg:steps-horizontal">
    <li class="step step-primary">
      <%= challenge_story.start.strftime("%B %d, %Y") %>
    </li>
    <li class="step step-primary">check in</li>
    <li class="step">check in </li>
    <li class="step">
      <%= challenge_story.finish.strftime("%B %d, %Y") %>
    </li>
  </ul>

  <div>
    <%= challenge_story.description %>
  </div>

</div>
