<% unless cookies[:push_notification_dismissed] %>
  <div class="sticky top-0 z-50 flex justify-center px-4 sm:px-0">
    <div data-controller="push-notifications" data-push-notifications-target="banner" class="alert alert-info alert-vertical sm:alert-horizontal shadow-lg w-full sm:w-auto sm:max-w-2xl hidden">
      <div class="flex items-center gap-2">
        <div>
          <p class="font-semibold">Stay in the loop with friends!</p>
          <p class="text-sm opacity-90">Enable notifications on this device, can be disabled anytime</p>
        </div>
      </div>
      <div class="flex flex-col sm:flex-row gap-2 w-full sm:w-auto">
        <button data-action="push-notifications#subscribe" class="btn btn-sm btn-primary">
          Enable on This Device
        </button>
        <button data-action="push-notifications#dismiss" class="btn btn-sm btn-ghost">
          Maybe Later
        </button>
      </div>
    </div>
  </div>
<% end %>
