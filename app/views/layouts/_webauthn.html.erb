<% if current_user %>
  <div class="dropdown dropdown-end dropdown-top" data-controller="menu">
    <div tabindex="0" role="button" class="btn btn-ghost btn-circle avatar" data-action="menu#open">
      <div class="w-10 rounded-full">
        <%= image_tag "https://www.gravatar.com/avatar/#{Digest::MD5.hexdigest(current_user.username.downcase)}?s=80&d=identicon", alt: current_user.username, class: "rounded-full" %>
      </div>
    </div>
    <ul tabindex="0" data-target="menu.openable" class="menu menu-sm dropdown-content bg-base-100 rounded-box z-1 mt-3 w-52 p-2 shadow">
      <%# 
      <li>
        <a class="justify-between">
          Profile
          <span class="badge">New</span>
        </a>
      </li>
       %>
      <div role="separator" class="mdc-list-divider"></div>
      <li><%= link_to "Auth keys", credentials_path %> </li>
      <li><%= link_to "Sign Out", session_path, method: :delete %> </li>
    </ul>
  </div>
<% else %>
  <div class="dropdown dropdown-end dropdown-top">
    <%= link_to  new_session_path do  %>
      <div tabindex="0" role="button" class="btn btn-ghost btn-circle avatar">
        <div class="w-10 rounded-full">
          <img alt="Tailwind CSS Navbar component" src="https://img.daisyui.com/images/profile/demo/spiderperson@192.webp" />
        </div>
      </div>
    <% end %>
  </div>
<% end %>