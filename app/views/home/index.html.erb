<div class="hero min-h-screen"
  style="background-image: url(https://img.daisyui.com/images/stock/photo-1507358522600-9f71e620c44e.webp);">
  <div class="hero-overlay"></div>
  <div class="hero-content text-neutral-content text-center">
    <div class="max-w-md">
      <h1 class="mb-5 text-5xl font-bold">
        Bet on yourself
      </h1>
      <p class="mb-5">
        Personal challenges with social proof.
         <br>
         Let friends keep you honest.
      </p>
      <div class="avatar-group -space-x-6 justify-center mb-5">
        <div class="avatar">
          <div class="w-24">
            <img src="https://img.daisyui.com/images/profile/demo/batperson@192.webp" />
          </div>
        </div>
        <div class="avatar">
          <div class="w-24">
            <img src="https://img.daisyui.com/images/profile/demo/spiderperson@192.webp" />
          </div>
        </div>
        <div class="avatar">
          <div class="w-24">
            <img src="https://img.daisyui.com/images/profile/demo/averagebulk@192.webp" />
          </div>
        </div>
        <div class="avatar">
          <div class="w-24">
            <img src="https://img.daisyui.com/images/profile/demo/wonderperson@192.webp" />
          </div>
        </div>
      </div>
      <ul class="steps">
        <li class="step step-primary" data-content="✓"> 
          <%= (Date.today - 3.days).strftime("%d %B") %>
        </li>
        <li class="step step-primary" data-content="✓"></li>
        <li class="step step-warning" data-content="?"></li>

        <li class="step"></li>
        <li class="step">
          <%= (Date.today + 4.days).strftime("%d %B") %>
        </li>
      </ul>
      <div>
        <div class="chat chat-start">
          <div class="chat-image avatar">
            <div class="w-10 rounded-full">
              <img alt="Tailwind CSS chat bubble component"
                src="https://img.daisyui.com/images/profile/demo/yellingcat@94.webp" />
            </div>
          </div>
          <div class="chat-header">
            Obi-Wan Kenobi
            <time class="text-xs opacity-50">12:45</time>
          </div>
          <div class="chat-bubble">You were the Chosen One!</div>
          <div class="chat-footer opacity-50">Delivered</div>
        </div>
        <div class="chat chat-end">
          <div class="chat-image avatar">
            <div class="w-10 rounded-full">
              <img alt="Tailwind CSS chat bubble component"
                src="https://img.daisyui.com/images/profile/demo/yellingwoman@94.webp" />
            </div>
          </div>
          <div class="chat-header">
            Anakin
            <time class="text-xs opacity-50">12:46</time>
          </div>
          <div class="chat-bubble">I hate you!</div>
          <div class="chat-footer opacity-50">Seen at 12:46</div>
        </div>
        <div class="chat chat-start">
          <div class="chat-image avatar">
            <div class="w-10 rounded-full">
              <img alt="Tailwind CSS chat bubble component"
                src="https://img.daisyui.com/images/profile/demo/yellingcat@94.webp" />
            </div>
          </div>
          <div class="chat-header">
            Obi-Wan Kenobi
            <time class="text-xs opacity-50">12:45</time>
          </div>
          <div class="chat-bubble">OK</div>
          <div class="chat-footer opacity-50">Delivered</div>
        </div>
      </div>

      Users registered
      <%= line_chart User.group_by_day(:created_at).count %>

    </div>
  </div>
</div>